
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-1.6.3.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

    <script src="~/Scripts/toastr.min.js"></script>

</head>
<div class="row p-2">
    <div class="col-md-12 col-sm-12 ">


        <div class="container table-bordered table-light ">

            <br />

            <h5 class="text-center">Ödeme Yöntemi Tanımla</h5>
            <br />
            <br />
            <form method="post">



                <div class="form-group">

                   
                    <div class="col-md-6 col-sm-6 ">
                        <input type="text" name="Id" value="" hidden="hidden" class="form-control" disabled="disabled" />
                    </div>


                </div>
                <div class="form-group">

                    <label class="col-form-label col-md-3 col-sm-3 label-align">
                        Ödeme Yöntemi
                        <span class="required">*</span>

                    </label>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" name="Tanim" value="" class="form-control" />
                    </div>


                </div>
           
                <div class="form-group">

                    <label class="col-form-label col-md-3 col-sm-3 label-align">
                        Açıklama
                        <span class="required">*</span>

                    </label>
                    <div class="col-md-6 col-sm-6">
                        <textarea type="text" name="Acıklama" rows="5" value="" class="form-control"></textarea>
                    </div>


                </div>
                <div class="In_solid"></div>
                <div class="form-group">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" class="btn btn-success"> Kaydet</button>
                        <button type="reset" class="btn btn-primary">Temizle</button>
                        <button type="button" class="btn btn-primary">İptal</button>



                    </div>

                </div>


            </form>




        </div>
    </div>
</div>

@if (TempData["sonuc"] != null && TempData["sonuc"].ToString() == "1")
{
    <script type="text/javascript">

        toastr["info"]("Kaydetme İşleminiz Başarili Bir Şekilde Gerçekleşti", "Mesaj")
    </script>
}
