
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-1.6.3.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

    <script src="~/Scripts/toastr.min.js"></script>

</head>
<div class="span3">
    <form method="post">
        <div class="form-group">
            <div class="form-group col-md-6 text-center ">
                <label>Kategori</label>
                <br />

                <select name="KategoriId" class="form-control">

                    <option value="-1">Seçiniz</option>
                    @foreach (var item in ViewBag.kategori)
                    {
                        <option value="@item.Id">@item.Tanim</option>

                    }
                </select>
            </div>

        </div>
        <h3>Kategori Ekle</h3>
        &nbsp; <input type="text" name="Tanim" class="span3" />

        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
    <br />
    <br />
    <br />
    <div class="container">


    </div>

    @if (TempData["sonuc"] != null && TempData["sonuc"].ToString() == "1")
    {
        <script type="text/javascript">

            toastr["info"]("Kayıt Eklendi","Mesaj")
        </script>
    }

</div>


