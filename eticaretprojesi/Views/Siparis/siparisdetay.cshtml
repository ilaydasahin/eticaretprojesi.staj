@model eticaretprojesi.Models.Siparis
@{
    ViewBag.Title = "siparisdetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12 col-sm-12">
    <div class="container">
        <div class="x_title">
            <h2>Ürün Ekle</h2>
            <form method="post">

                <div class="form-group">
                    <label>Müşteri Adi</label>
                    <input type="text" name="Adi" value="@Model.musteri.adi" class="form-control" />

                </div>

                <div class="form-group">
                    <label>Müşteri Soyadı</label>
                    <input type="text" name="Soyadi" value="@Model.musteri.Soyadi" class="form-control" />

                </div>
                <div class="form-group">
                    <label>Ürün Adi</label>
                    <input type="text" name="Adi" value="@Model.SiparisDetay.Urunler.Adi" class="form-control" />

                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" name="Fiyat" value="@Model.SiparisDetay.Fiyat" class="form-control" />

                </div>
                <div class="form-group">
                    <label>Varyant</label>
                    <input type="text" name="Tanim" value="@Model.SiparisDetay.Varyant.Tanim" class="form-control" />

                </div>
                <div class="form-group">
                    <label>Adet</label>
                    <input type="text" name="Miktar" value="@Model.SiparisDetay.Miktar" class="form-control" />

                </div>

                <div class="form-group">
                    <label>E-Posta</label>
                    <input type="text" name="Eposta" value="@Model.musteri.Eposta" class="form-control" />

                </div>

                <div class="form-group">
                    <label>Teslimat Adresi</label>
                    <textare rows="1">@Model.musteri.TeslimatAdresi</textare>

                </div>

                <div class="form-group">
                    <label>Fatura Adresi</label>
                    <textarea rows="1">@Model.musteri.FaturaAdresi</textarea>

                </div>


                <div class="form-group">
                    <label>Ödeme Yöntemi</label>
                    <input type="text" name="Adi" value="@Model.SiparisDetay.OdemeYontemi.Tanim" class="form-control" />

                </div>

                <div class="form-group">
                    <label>Kargo Firmasi</label>
                    <input type="text" name="Adi" value="@Model.SiparisDetay.KargoFirmasi.Sİrket" class="form-control" />

                </div>
                <div class="form-group">
                    <label>Kargo Firmasi</label>
                    <input type="text" name="KargoTakip" value="@Model.KargoTakip" class="form-control" />

                </div>
                <div class="form-group">
                    <label>Ekleme Tarihi</label>
                    <br />

                    <input type="datetime" name="SatisTarihi" id="Ekleme_Tarih" class="date" value="@Model.SatisTarihi.ToString()" required />


                </div>
                <div class="form-group">
                    <label>Sipariş Durum</label>
                    @Html.DropDownList("SiparisDurumuId", (List<SelectListItem>)ViewBag.siparisdurum, htmlAttributes: new { @class = "form-control" })


                </div>




                <button type="submit" class="btn btn-primary">Kaydet</button>

            </form>
        </div>

    </div>

</div>


