@model eticaretprojesi.Models.Urunler

@{
    ViewBag.Title = "guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">

            <div class="container">
                @using (Html.BeginForm("guncelle", "Urunler", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {


                    <label>Resim Güncele</label>
                    <input type="file" name="file" />
                    <br />
                    <input type="hidden" name="Resim" value="@Model.Resim" class="form-control" multiple required />
                    
                    <input type="submit" value="Resim Güncelle"/>

                }

                <form method="post">

                    <div class="form-group">
                        <label>Resim</label>
                        <br />
                        <input type="hidden" name="Resim" value="@Model.Resim" class="form-control" multiple required />

                        <img src="http://localhost:62437/\content\images\@Model.Resim.Split(';')[0]" alt="@Model.Adi" style="height:200px;width:250px" class="avatar img-circle img-thumbnail" />
                    </div>


                    <div class="form-group">
                        <label>Ürün Adi</label>
                        <input type="text" name="Adi" value="@Model.Adi" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Kategori</label>
                        @Html.DropDownList("KategoriID", (List<SelectListItem>)ViewBag.kategoriler, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Kategori</label>
                        @Html.DropDownList("VaryantId", (List<SelectListItem>)ViewBag.varyant, htmlAttributes: new { @class = "form-control" })
                    </div>



                    <div class="form-group">
                        <label>Fiyat</label>
                        <input type="text" name="fiyat" value="@Model.fiyat" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label>Stok Kodu</label>
                        <input type="text" name="Stok_Kodu" value="@Model.Stok_Kodu" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label>Miktar</label>
                        <input type="text" name="Adet" value="@Model.Adet" class="form-control" required />
                    </div>


                    <div class="form-group">
                        <label>Ürün Adi</label>
                        <textarea class="form-control" name="Acıklama" rows="5">@Model.Acıklama</textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">kaydet</button>

                </form>
            </div>
        </div>

    </div>
</div>
