
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-1.6.3.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

    <script src="~/Scripts/toastr.min.js"></script>

</head>
<div class="row p-2">
    <div class="col-md-12 col-sm-12 ">


        <div class="container table-bordered table-light ">

            <br />

            <h5 class="text-center">İade Koşullari</h5>
            <br />
            <br />
            <form method="post">


                @foreach (var item in ViewBag.iade)
                {
                    <div class="form-group">

                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            <span class="required">*</span>

                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input type="text" name="Id" value="@item.Id" class="form-control" disabled="disabled" />
                        </div>


                    </div>
                    <div class="form-group">

                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            Başlık
                            <span class="required">*</span>

                        </label>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" name="Baslik" value="@item.Baslik" class="form-control" />
                        </div>


                    </div>
                    <div class="form-group">

                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            Anahtar_Kelime
                            <span class="required">*</span>

                        </label>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" name="Ahatar_kelime" value="@item.Ahatar_kelime" class="form-control" d />
                        </div>


                    </div>

                    <div class="form-group">

                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            Title
                            <span class="required">*</span>

                        </label>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" name="Title" value="@item.Title" class="form-control" />
                        </div>


                    </div>
                    <div class="form-group">

                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            İcerik
                            <span class="required">*</span>

                        </label>
                        <div class="col-md-6 col-sm-6">
                            <textarea type="text" name="İcerik" rows="5" value="@item.İcerik" class="form-control">@item.İcerik</textarea>
                        </div>


                    </div>
                    <div class="In_solid"></div>
                    <div class="form-group">
                        <div class="col-md-9 offset-md-3">
                            <button type="submit" class="btn btn-success"> Kaydet</button>
                            <button type="reset" class="btn btn-primary">Temizle</button>
                            <button type="button" class="btn btn-primary">İptal</button>



                        </div>

                    </div>
                }

            </form>




        </div>
    </div>
</div>

@if (TempData["sonuc"] != null && TempData["sonuc"].ToString() == "1")
{
    <script type="text/javascript">

        toastr["info"]("Kaydetme İşleminiz Başarili Bir Şekilde Gerçekleşti", "Mesaj")
    </script>
}


