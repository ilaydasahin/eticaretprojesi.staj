@model List<eticaretprojesi.Models.musteri>
@{
    ViewBag.Title = "liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.css" />



</head>
<div class="container">
    <div class="table-responsive">

        <table id="Urunler" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>NO</th>
                    <th>Adi</th>
                    <th>Soyadı</th>
                    <th>Eposta</th>
                    <th>Teslimat Adresi</th>
                    


                    <th>Güncelle</th>
                    <th>Sil</th>


                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>

                    <tr>



                        <td>@item.Id</td>

                        <td>@item.adi</td>
                        <td>@item.Soyadi</td>
                        <td>@item.Eposta</td>
                        <td>


                            <!-- Button trigger modal -->
                            <button type="button" data-placement="top" data-toggle="modal" title="Görüntüle" class="btn btn-primary btn-xs" style="font-size:x-small" data-target="#exampleModalCenter_@item.Id">
                                Açıklama Oku
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalCenter_@item.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle_@item.Id">Açıklama</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            @Html.Raw(item.TeslimatAdresi)
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>



                        <td>
                            <a href="/Musteri/guncelle/@item.Id" class="btn btn-primary btn-xs" style="font-size:x-small">Güncelle</a>

                        </td>

                        <td>
                            <a class="btn btn-primary btn-sm" href="/Urunler/Sil/@item.Id" onclick="return confirm('Urun Silmek İstediğinize Eminmisiniz?')">Sİl</a>
                        </td>

                    </tr>
                </tbody>
            }

        </table>
    </div>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Urunler').DataTable();
    });
</script>

